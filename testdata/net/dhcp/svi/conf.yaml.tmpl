routers:
- hostname: R1
  image: "platinasystems/debian-dhcp:0.2"
  cmd: "/root/startup.sh"
  intfs:
  - name: {{index . "net0port0"}}
    address:
      - 192.168.120.5/24
    vlan: 10
- hostname: R2
  image: "platinasystems/debian-dhcp:0.2"
  cmd: "/root/startup.sh"
  intfs:
  - name: br0
    isbridge: true  
    address:
      - 192.168.120.10/24
  - name: {{index . "net0port1"}}
    upper: br0
    vlan: 10