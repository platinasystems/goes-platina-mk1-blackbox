routers:
- hostname: R1
  image: "platinasystems/debian-dhcp:0.2"
  cmd: "/root/startup.sh"
  intfs:
  - name: {{index . "net0port0"}}
    address:
      - 192.168.120.5/24
    vlan: 10
- hostname: R2
  image: "platinasystems/debian-dhcp:0.2"
  cmd: "/root/startup.sh"
  intfs:
  - kind: bridge
    name: br0
    address:
      - 192.168.120.10/24
  lowers:
    br0:
    - name: {{index . "net0port1"}}
      vlan: 10
